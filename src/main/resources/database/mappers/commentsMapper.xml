<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kbo.s1.board.comments.CommentsDAO">
	<!-- ID getList -->
	<select id="getList" parameterType="CommentsDTO" resultType="CommentsDTO">
		select * from comments where num=#{num} order by commentNum desc
	</select>

	<!-- ID setInsert -->
	<insert id="setInsert" parameterType="CommentsDTO">
		insert into comments values(notice_seq.nextval, #{num}, #{writer}, #{contents}, sysdate)
	</insert>
</mapper>